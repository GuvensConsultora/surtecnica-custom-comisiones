<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form -->
    <record id="commission_create_vendor_bill_view_form" model="ir.ui.view">
        <field name="name">commission.create.vendor.bill.form</field>
        <field name="model">commission.create.vendor.bill</field>
        <field name="arch" type="xml">
            <form string="Crear Factura de Proveedor">
                <group>
                    <field name="journal_id"/>
                    <field name="commission_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <footer>
                    <button name="action_create_bills"
                            string="Crear Facturas"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action del wizard -->
    <record id="action_commission_create_vendor_bill" model="ir.actions.act_window">
        <field name="name">Crear Factura de Proveedor</field>
        <field name="res_model">commission.create.vendor.bill</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_salesperson_commission"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
